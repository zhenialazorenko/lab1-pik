<Window x:Class="Lazorenko_lab1_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Editor" Height="450" Width="800">
    <Grid Margin="400,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="125*"/>
            <RowDefinition Height="131*"/>
            <RowDefinition Height="184*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/арт3.jpg" Stretch="None"/>
        </Grid.Background>

        <TextBox x:Name="txtDocument" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                 HorizontalAlignment="Left" HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="397" Height="440" Margin="-397,0,0,0" Grid.RowSpan="3"
                 IsEnabled="False" FontFamily="Times New Roman" FontSize="20"/>

        <ComboBox x:Name="cmbActions" HorizontalAlignment="Left" Margin="187,10,0,0"
                  VerticalAlignment="Top" Width="192" FontFamily="Times New Roman"
                  FontSize="20" Height="29">
            <ComboBoxItem>New</ComboBoxItem>
            <ComboBoxItem>Open</ComboBoxItem>
            <ComboBoxItem>Save</ComboBoxItem>
            <ComboBoxItem>Exit</ComboBoxItem>
        </ComboBox>

        <Button x:Name="btnExecute" Content="Виконати" HorizontalAlignment="Left"
                Margin="262,117,0,0" Grid.Row="2" VerticalAlignment="Top" Height="46" Width="117"
                Click="btnExecute_Click" FontFamily="Times New Roman" FontSize="20" Background="#FF4001E8"/>
    </Grid>
</Window>